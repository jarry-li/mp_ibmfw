<%= form_for @wx_mp_user, validate: true, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @wx_mp_user.new_record? %>
  <div class="control-group">
    <%= f.label :name, '公众号名称', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <% else %>
  <div class="control-group">
    <%= f.label :welcome_msg, '设置欢迎语', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :welcome_msg, :class => 'text_field' %>
    </div>
  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit '保存', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                wx_mp_users_path, :class => 'btn' %>
  </div>
<% end %>
